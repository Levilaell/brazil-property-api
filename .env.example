# Brazil Property API - Environment Variables Template
# Copy this file to .env.development, .env.staging, .env.production and fill in the values

# Application Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True
TESTING=False

# Database Configuration
MONGODB_URL=mongodb://admin:admin123@localhost:27017/brazil_property_dev?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=brazil_property_dev

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_DEFAULT_TIMEOUT=300

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
CORS_ORIGINS=*
MAX_CONTENT_LENGTH=16777216

# Rate Limiting
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_SEARCH=50/hour
RATE_LIMIT_ANALYSIS=20/hour
RATE_LIMIT_HISTORY=30/hour
RATE_LIMIT_STATS=25/hour

# Security
API_KEYS_valid_key_123=Test App,1000/hour,search,analysis,history
API_KEYS_limited_key_456=Limited App,100/hour,search
RATE_LIMIT_EXEMPT_IPS=127.0.0.1,::1

# Analytics and Monitoring
ANALYTICS_ENABLED=true
ANALYTICS_STORAGE=memory
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=300
METRICS_ENABLED=true
METRICS_STORAGE=memory
METRICS_RETENTION_DAYS=30
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_CACHE_TTL=60

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Brazil Property API Bot)
SCRAPER_DELAY=1
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# External Services (Production only)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Notification Services
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@brazil-property-api.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Performance Tuning
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# Docker Configuration
COMPOSE_PROJECT_NAME=brazil-property-api
COMPOSE_PROFILES=
IMAGE_TAG=latest
REGISTRY=ghcr.io
IMAGE_NAME=levilaell/brazil-property-api